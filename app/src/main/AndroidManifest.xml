<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simp.kurisanic.dstvtodolist">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.simp.kurisanic.mylibrary.activities.ListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.simp.kurisanic.mylibrary.activities.CreateActivity"
            android:label="@string/title_activity_update"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <activity
            android:name="com.simp.kurisanic.mylibrary.activities.UpdateActivity"
            android:label="@string/title_activity_update"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>